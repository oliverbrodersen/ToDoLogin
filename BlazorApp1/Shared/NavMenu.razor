<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ToDo list!</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView Policy="SecurityLevel2">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="AddTodo">
                    <span class="oi oi-plus" aria-hidden="true"></span> New Todo
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="SecurityLevel1">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Todos">
                    <span class="oi oi-list" aria-hidden="true"></span>
                    Todos
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="MustBeVIA">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="VIA">
                    <span class="oi oi-book" aria-hidden="true"></span> VIA
                </NavLink>
            </li>
        </AuthorizeView>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Security">
                <span class="oi oi-lock-unlocked" aria-hidden="true"></span> Security
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
